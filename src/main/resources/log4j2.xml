<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <Console name="ConsoleX" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <File name="FileX" fileName="/Users/abdulhadhi/Documents/College/Software Development/SSD_Project/log4j/applogs/app.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>

    </Appenders>


    <Loggers>

        <Logger name="com.cohort.cohort4app" level="trace">

            <AppenderRef ref="FileX" />
            <!--            <AppenderRef ref="RollingFileX" />-->
            <AppenderRef ref="ConsoleX" />

        </Logger>

        <Root level="trace">
            <AppenderRef ref="FileX" />
            <AppenderRef ref="ConsoleX" />
        </Root>

    </Loggers>

</Configuration>